@model List<Pergunta>
@{
    ViewBag.Title = "Lista de Perguntas";
    Layout = "_Layout";
}

<div class="mx-1 p-4">
    <h1 class="text-2xl font-bold">Lista de Perguntas</h1>
    
    <div class="mb-4">
        <h2 class="text-lg">Filtrar por Linguagem</h2>
        <div class="flex space-x-4">
            <button onclick="filterByLinguagem('html')" class="bg-blue-500 text-white px-4 py-2 rounded">HTML</button>
            <button onclick="filterByLinguagem('csharp')" class="bg-blue-500 text-white px-4 py-2 rounded">C#</button>
            <button onclick="filterByLinguagem('php')" class="bg-blue-500 text-white px-4 py-2 rounded">PHP</button>
            <button onclick="filterByLinguagem('javascript')" class="bg-blue-500 text-white px-4 py-2 rounded">JavaScript</button>
            <button onclick="filterByLinguagem('sql')" class="bg-blue-500 text-white px-4 py-2 rounded">SQL</button>
        </div>
    </div>

    <div class="mb-4">
        <h2 class="text-lg">Filtrar por Nível</h2>
        <div class="flex space-x-4">
            <button onclick="filterByNivel('1')" class="bg-blue-500 text-white px-4 py-2 rounded">Básico</button>
            <button onclick="filterByNivel('2')" class="bg-blue-500 text-white px-4 py-2 rounded">Normal</button>
            <button onclick="filterByNivel('3')" class="bg-blue-500 text-white px-4 py-2 rounded">Avançado</button>
        </div>
    </div>
    
    @if (Model != null && Model.Count > 0)
    {
        @foreach (var pergunta in Model)
        {
            <div class="text-white flex items-center justify-between bg-gray-800 p-2 rounded shadow border border-gray-700">
                @pergunta.Description
                <div>
                    <button type="button" onclick="showDeleteModal('@pergunta.Id')">
                        <i class="bx bxs-trash text-xl"></i>
                    </button>
                    <a asp-controller="Perguntas" asp-action="Edit" asp-route-id="@pergunta.Id">
                        <i class='bx bxs-edit-alt text-xl'></i>
                    </a>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-gray-500">Nenhuma pergunta encontrada.</p>
    }
</div>

<!-- Modal de Confirmação de Exclusão -->
<div id="deleteModal" class="fixed inset-0 bg-gray-800 bg-opacity-75 flex items-center justify-center hidden">
    <div class="bg-gray-700 py-6 px-4 rounded-lg shadow-lg text-center w-80">
        <h2 class="text-xl font-bold mb-4 text-white">Excluir</h2>
        <p class="text-white mb-6">Deseja excluir essa questão?</p>
        <div class="flex justify-center space-x-4">
            <button onclick="hideDeleteModal()" class="px-6 py-2 border border-cyan-100 text-white rounded">Não</button>
            <button onclick="confirmDelete()" class="px-6 py-2 border border-cyan-100 text-white rounded">Sim</button>
        </div>
        <form id="deleteForm" method="post" asp-action="Delete" asp-controller="Perguntas">
            <input type="hidden" name="id" id="deleteId" />
        </form>
    </div>
</div>

<script>
    function showDeleteModal(id) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteModal').classList.remove('hidden');
    }
    
    function hideDeleteModal() {
        document.getElementById('deleteModal').classList.add('hidden');
    }
    
    function confirmDelete() {
        document.getElementById('deleteForm').submit();
    }
    
    function filterByLinguagem(linguagem) {
        const nivel = getUrlParameter('nivel');
        let query = '?lang=' + encodeURIComponent(linguagem);
        if (nivel) query += '&nivel=' + encodeURIComponent(nivel);
        window.location.href = '@Url.Action("Index", "Perguntas")' + query;
    }

    function filterByNivel(nivel) {
        const linguagem = getUrlParameter('lang');
        let query = '?nivel=' + encodeURIComponent(nivel);
        if (linguagem) query += '&lang=' + encodeURIComponent(linguagem);
        window.location.href = '@Url.Action("Index", "Perguntas")' + query;
    }

    function getUrlParameter(param) {
        const urlParams = new URLSearchParams(window.location.search);
        return urlParams.get(param);
    }

</script>
