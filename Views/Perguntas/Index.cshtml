@model List<Pergunta>
@{
    ViewBag.Title = "Lista de Perguntas";
    Layout = "_Layout";
}

<head>
    <link href="~/css/TelaEditarPergunta.css" rel="stylesheet" />
</head>

<div class="filter-conteiner">

    <div class="filter_languages">
        <div class="container-teste">
            <div class="filter-languages">
                <button onclick="filterByLinguagem('html')" class="tab">HTML</button>
                <button onclick="filterByLinguagem('css')" class="tab">Css</button>
                <button onclick="filterByLinguagem('javascript')" class="tab">JavaScript</button>
            </div>
        </div>
    </div>

        <div class="filter_levels">
            <div class="filter-levels">
                <button onclick="filterByNivel('1')" class="buttons-levels">Básico</button>
                <button onclick="filterByNivel('2')" class="buttons-levels">Normal</button>
                <button onclick="filterByNivel('3')" class="buttons-levels">Avançado</button>
            </div>
        </div>

        <div class="teste">
        </div>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        @foreach (var pergunta in Model)
        {
            <div class="quest-list">
                <div class="pedrao">
                    @pergunta.Description
                </div>
                <div class="btn-alt">
                    <button type="button" onclick="showDeleteModal('@pergunta.Id')">
                        <i class="bx bxs-trash icon-trash"></i>
                    </button>
                    <a asp-controller="Perguntas" asp-action="Edit" asp-route-id="@pergunta.Id">
                        <i class='bx bxs-edit icon-edit'></i>
                    </a>
                </div>
            </div>
        }
    }
    else
    {
        <p class="no-question">VAZIO</p>
    }
</div>

<!-- Modal de Confirmação de Exclusão -->
<div id="deleteModal" class="fixed inset-0 bg-gray-800 bg-opacity-75 flex items-center justify-center hidden">
    <div class="card">
        <div class="card-content">
            <p class="card-heading">Excluir</p>
            <p class="card-description">Tem certeza que vai Excluir</p>
        </div>
        <div class="card-button-wrapper">
            <button onclick="hideDeleteModal()" class="card-button secondary">Cancelar</button>
            <button onclick="confirmDelete()" class="card-button primary">Excluir</button>
        </div>
        <button onclick="hideDeleteModal()" class="exit-button">
            <svg height="20px" viewBox="0 0 384 512">
                <path d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"></path>
            </svg>
        </button>
        <form id="deleteForm" method="post" asp-action="Delete" asp-
              controller="Perguntas">
            <input type="hidden" name="id" id="deleteId" />
        </form>
    </div>

</div>

<script>
    function showDeleteModal(id) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteModal').classList.remove('hidden');
    }
    
    function hideDeleteModal() {
        document.getElementById('deleteModal').classList.add('hidden');
    }
    
    function confirmDelete() {
        document.getElementById('deleteForm').submit();
    }
    
    function filterByLinguagem(linguagem) {
        const nivel = getUrlParameter('nivel');
        let query = '?lang=' + encodeURIComponent(linguagem);
        if (nivel) query += '&nivel=' + encodeURIComponent(nivel);
        window.location.href = '@Url.Action("Index", "Perguntas")' + query;
    }

    function filterByNivel(nivel) {
        const linguagem = getUrlParameter('lang');
        let query = '?nivel=' + encodeURIComponent(nivel);
        if (linguagem) query += '&lang=' + encodeURIComponent(linguagem);
        window.location.href = '@Url.Action("Index", "Perguntas")' + query;
    }

    function getUrlParameter(param) {
        const urlParams = new URLSearchParams(window.location.search);
        return urlParams.get(param);
    }

</script>
